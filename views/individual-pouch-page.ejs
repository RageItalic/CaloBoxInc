    <script>
      function switchToCreated() {
        removeActive();
        hideAll();
        $("#all-tab").addClass("is-active");
        $("#all-tab-content").removeClass("hidden");
      }

      function switchToBenefits() {
        removeActive();
        hideAll();
        $("#adaptivedesign-tab").addClass("is-active");
        $("#adaptivedesign-tab-content").removeClass("hidden");
      }

      function switchToTimeToEat() {
        removeActive();
        hideAll();
        $("#jquery-tab").addClass("is-active");
        $("#jquery-tab-content").removeClass("hidden");
      }

      function switchToNutritionInfo() {
        removeActive();
        hideAll();
        $("#nutrition-tab").addClass("is-active");
        $("#nutrition-tab-content").removeClass("hidden");
      }

      function removeActive() {
        $("li").each(function() {
          $(this).removeClass("is-active");
        });
      }

      function changeBackGround1() {
        $('#mainSection').css("background-image", "url('<%= response[0].pouch_image_url_2 %>')");
        $('#mainSection').css('background-size', 'cover');
        $('#mainSection').css('background-repeat', 'no-repeat');
        $('#infoBox').css('background-color', 'rgba(255,255,255,0.5)');
      }

      function changeBackGround2() {
        $('#mainSection').css("background-image", "url('<%= response[0].pouch_image_url_3 %>')");
        $('#mainSection').css('background-size', 'cover');
        $('#mainSection').css('background-repeat', 'no-repeat');
        $('#infoBox').css('background-color', 'rgba(255,255,255,0.5)');
      }

      function hideAll(){
        $("#all-tab-content").addClass("hidden");
        $("#adaptivedesign-tab-content").addClass("hidden");
        $("#jquery-tab-content").addClass("hidden");
        $("#nutrition-tab-content").addClass("hidden");
        $("#ajax-tab-content").addClass("hidden");
        $("#angularjs-tab-content").addClass("hidden");
      }
