  <body style="background-image: url('../brick-wall.png');">

    <% include ./partials/_navbar %>

    <section class="section">
      <div class="container">
        <h1 class="title">
          Login to start buying our awesome snacks.
        </h1>
        <p class="subtitle">
          Not signed up? Sign up <a href="/signup">here.</a>
