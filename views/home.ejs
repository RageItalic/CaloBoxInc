      .rig-img {
          display:block;
          width: 100%;
          height: auto;
          border:none;
          transform:scale(1);
          transition:all 1s;
      }

      #rig li:hover .rig-img {
          transform:scale(1.15);
      }

      /* If have captions */


      @media (max-width: 9000px) {
          #rig li {
              width:25%;
          }
      }

      @media (max-width: 700px) {
          #rig li {
              width:33.33%;
          }
      }

      @media (max-width: 550px) {
          #rig li {
              width:50%;
          }
      }
    </style>

