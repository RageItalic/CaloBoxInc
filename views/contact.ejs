    <% include ./partials/_navbar %>

    <section class="section">
      <div class="container has-text-centered">
        <h1 class="title">
          Contact Us
        </h1>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="columns is-vcentered">
          <div class="column is-half-desktop is-offset-one-quarter">
            <p class="subtitle">Have a question? Need to order in bulk? Want us to provide for an event? Drop us a line and we will get back to you <a href="https://giphy.com/gifs/justin-g-run-away-fast-3o7ZetIsjtbkgNE1I4/fullscreen" target="_blank">incredibly quick!</a></p>
            <form method="POST" action="/contactEmail" id="mailForm">
              <div class="field">
                <label class="label">Name</label>
                <div class="control">
                  <input class="input" type="text" placeholder="e.g Alex Smith" name="pName" id="pName" required>
                </div>
              </div>
              <div class="field">
                <label class="label">Email</label>
                <div class="control">
                  <input class="input" type="email" placeholder="e.g. alexsmith@gmail.com" id="email" name="email" required>
                </div>
              </div>
              <div class="field">
                <label class="label">Phone Number</label>
                <div class="control">
                  <input class="input" type="tel" placeholder="e.g. 9898230900" name="pNumber" id="pNumber" minlength="10" required>
                </div>
              </div>
              <div class="field">
                <label class="label">Message</label>
                <div class="control">
                  <textarea class="textarea" type="text" placeholder="Hi, I would like to know how your products are so awesome! Please do tell." name="message" id="message" required></textarea>
                </div>
              </div>
              <p class="control">
                <input class="button is-primary" type="submit" value="Get In Touch">
                </input>
              </p>
            </form>
            <br />
            <p class="subtitle" id="messageHere"></p>
          </div>
        </div>
      </div>
    </section>

